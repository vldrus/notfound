[Unit]
Description=A simple server that always returns '404 page not found'
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
ExecStart=/usr/local/bin/notfound -addr 0.0.0.0:8888 -cert /usr/local/share/cert/cert.crt -key /usr/local/share/cert/cert.key
ExecReload=/bin/kill -s SIGHUP "$MAINPID"

[Install]
WantedBy=multi-user.target
